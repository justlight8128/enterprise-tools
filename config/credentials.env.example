# Enterprise Tools Configuration
# Copy this file to ~/.enterprise-tools/credentials.env
# and fill in your credentials

# Jira (Atlassian Cloud)
# Get API token: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_BASE_URL="https://your-company.atlassian.net"
JIRA_EMAIL="your-email@company.com"
JIRA_API_TOKEN="your-api-token"

# Confluence (Atlassian Cloud)
# Usually same as Jira for Atlassian Cloud
CONFLUENCE_BASE_URL="https://your-company.atlassian.net"
CONFLUENCE_EMAIL="your-email@company.com"
CONFLUENCE_API_TOKEN="your-api-token"

# Slack
# Create app: https://api.slack.com/apps
# Required scopes: chat:write, channels:read, users:read, search:read
SLACK_BOT_TOKEN="xoxb-your-bot-token"

# GitLab
# Create token: https://gitlab.com/-/profile/personal_access_tokens
# Required scopes: api, read_api, read_repository
GITLAB_BASE_URL="https://gitlab.com"
GITLAB_TOKEN="your-personal-access-token"
